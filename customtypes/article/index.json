{
  "id": "article",
  "label": "Article",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "",
          "allowTargetBlank": true,
          "single": "heading1"
        }
      },
      "excerpt": {
        "type": "Text",
        "config": {
          "label": "Excerpt",
          "placeholder": "Short description for lists"
        }
      },
      "featured_image": {
        "type": "Image",
        "config": {
          "label": "Featured Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "date_of_publication": {
        "type": "Date",
        "config": {
          "label": "Date of publication",
          "placeholder": ""
        }
      },
      "category": {
        "type": "Link",
        "config": {
          "label": "Category",
          "select": "document",
          "customtypes": ["article_category"]
        }
      },
      "author": {
        "type": "Link",
        "config": {
          "label": "Author",
          "select": "document",
          "customtypes": ["author"]
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    },
    "Content": {
      "slices2": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "call_to_action": {
              "type": "SharedSlice"
            },
            "testimonials": {
              "type": "SharedSlice"
            },
            "timeline": {
              "type": "SharedSlice"
            },
            "text": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "Footer": {
      "slices3": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "articles": {
              "type": "SharedSlice"
            },
            "accordion_section": {
              "type": "SharedSlice"
            },
            "form_section": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
